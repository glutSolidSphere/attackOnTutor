</head>

<body>
	<ul id="header"> <!-- Header -->
	
		<% if(user){ %> <!-- Only Shown when User is Logged in -->
		<li class="header"
		style="
			margin-right:3.5vw;
		">
			<div class="link-flourish">
			</div>
			<a id="logout" class="font">Logout</a>
		</li>
		<% } %>
		
		<div class="header-flourish">
		</div>
	</ul>

	<div class="header-padding"
	style="
		width:100%;
		height:6.8vw;
	"></div>

    <div id="titleContainer"> <!-- Main Body -->
		<div class="logo-container">
			<div class="glitch-text" data-text="attack">
				attack
			</div>
			<div class="glitch-text" data-text="on">
				on
			</div>
			<div class="glitch-text" data-text="tutor">
				tutor
			</div>
		</div>
		
		<div class="login-container">
			<div class="login-header">
				aot
				<div class="login-button-container">
					<% if(user){ %> <!-- Only Shown when User is Logged in -->
					<a href="/dashboard">
						<button class="default-style-button"
						style="
						vertical-align:baseline;
						">DASHBOARD</button>	
					</a>
					<% } else{ %>
						<button class="default-style-button"
						id="login-btn"
						style="
						vertical-align:baseline;
						">LOGIN</button>
					<% } %>
				</div>
			</div>
			<% if(user){ %>
				<div class="welcome-text">
					Welcome, <%= user.name %>!
				</div>
			<% } else{ %>
				<div> 
					<div class="login-field-container">
						<div class="login-field-label">
						Username:
						</div>
						
						<input id="account" type="text" class="login-field-input">
					</div>
					<div class="login-field-container">
						<div class="login-field-label">
						Password:
						</div>
						
						<input id="password" type="password" class="login-field-input">
					</div>	
				</div>
				
				<% if(failedLogin){ %>
				<div class="failure-text">
					Username or password incorrect! Please try again.
				</div>
				<% } %>
			<% } %>
		</div>
    </div>
</body>

</html>

